{{#if error }}
    <div class="alert alert-danger" role="alert">
        {{ error }}
    </div>
{{/if}}

{{#if success }}
    <div class="alert alert-success" role="alert">
        {{ success }}
    </div>
{{/if}}

<form action="/{{ options.guildId }}" method="POST">
    <img src="{{ discordInfo.iconURL }}" alt="Server Icon" class="mb-2 mr-4" style="display: inline-block; float: left; width: 64px; height: 64px;">
    <h5 class="mb-2 p-4">{{ discordInfo.name }}</h5>
    <div class="form-group">
        <label>Guild Prefix</label>
        <input type="text" class="form-control" name="prefix" placeholder="{{ options.prefix }}" style="width: 20%;">
        <small id="emailHelp" class="form-text text-muted">Prefix can contain a maximum of 32 characters</small>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
<a href="/" class="btn btn-primary mt-4">Go back</a>